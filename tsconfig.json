{
  "compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"outDir": "dist",
		"lib": [
			"es6",
			"DOM"
		],
		"typeRoots": [
			"node_modules/@types"
		],
    "declaration": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}